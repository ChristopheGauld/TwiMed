# Ci dessous : méthode pubmed.mineR : extraction des abstracts via "save pubmed" sur le site net de pubmed, en xml. Puis importation du xml 
library(pubmed.mineR)
library(XML)
library(methods)
result <- xmlParse(file = "pubmed_result.xml")
result
pubmm <- xmlreadabs(file = "pubmed_result.xml")
View(pubmm)
# Document term matrix avec nombre d'occurrence d'un ou plusieurs termes / aussi searchabsT
pubmed_tdm <- tdm_for_lsa(pubmm, y="autism")

